<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/activity_dialog_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_detailed_message"
        app:layout_constraintBottom_toTopOf="@+id/activity_dialog_btn_yes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_dialog_btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_detailed_btn_positivetext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/activity_dialog_btn_no"
        app:layout_constraintTop_toBottomOf="@id/activity_dialog_tv_message"/>

    <Button
        android:id="@+id/activity_dialog_btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_detailed_btn_negativetext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/activity_dialog_btn_yes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_dialog_tv_message"/>
</androidx.constraintlayout.widget.ConstraintLayout>